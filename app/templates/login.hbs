<style>
.forgetpassword{
  text-align: end;
}
.group{
  display: flex;
  flex: wrap;
}
.line{
   width: 200px;
    height: 2px;
    background-color: black;
    margin-top: 20px;
}
.Or{
 margin-top: 8px;
}
.image-block{
  display: flex;
  column-gap: 20px;
  justify-content: center;
}
.sm-img1{
   background-image: url('facebook.png');
   width: 30px;
   background-size: contain;
   background-repeat: no-repeat;
}
.sm-img2{
   background-image: url('insta.png');
   height: 30px;
   width: 30px;
   background-size: contain;
   background-repeat: no-repeat;
}
.sm-img3{
   background-image: url('google.png');
   height: 50px;
   width: 30px;
   background-size: contain;
   background-repeat: no-repeat;
}


</style>

<div class="container mt-4" style="background-color: #f0f0f0;"> 
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card" style="height: 550px;">
        <div class="card-body">
          <h2 class="card-title text-center mb-4"><strong>Login</strong></h2>
          <form {{on "submit" this.login}} class="mb-3 ms-4 ">
            <div class="mb-2">  
              <Input type="text"   id="email" @value={{this.email}} class="form-control mb-3" placeholder="Enter your email"/> 
            </div>
            <div class="mb-2">
             <Input type="password"  style="-webkit-text-security: disc" id="password" @value={{this.password}} class="form-control mb-3" placeholder="Enter your password"/>  
            </div>
            {{#if this.errorMessage}}
                  <div class="alert alert-danger">
                    {{this.errorMessage}}
                  </div>
            {{/if}}

            {{#if this.validationErrors}}
                    <div class="alert alert-danger">
                      <ul>
                          {{#each this.validationErrors as |error|}}
                              <li>{{error}}</li>
                          {{/each}}
                      </ul>
                    </div>
            {{/if}}
            <div class="mb-2">
            </div>
            <div class="mb-2">
            </div>
            <div class="mb-2">
              {{input type="checkbox" }}
              <label class="form-check-label" for="rememberMe">Remember Me</label>
            </div>
             <div class="d-grid gap-2 ">
            <button type="submit" class="btn btn-primary"><strong>Login</strong></button>
            </div>
            <div class="forgetpassword">
              <p type="button">Forgot Password?</p>
            </div>
            <div class="group">
            <div class="line">
            </div>
            <div class="Or">
              <p>OR</p>
            </div>
            <div class="line">
            </div>
            </div>
            <div class="image-block">
              <div type="button" class="sm-img1"></div>
              <div type="button" class="sm-img2"></div>
              <div type="button" class="sm-img3"></div>
            </div>
           <div class="mt-3">
              <p>Doesn't have an account yet?<LinkTo @route="register" class="btn btn-link mb-2"> Register </LinkTo></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
