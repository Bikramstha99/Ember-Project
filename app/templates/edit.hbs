<style>
.picture{
  width: 450px;
  height: 300px;
}
</style>
<NavBard />
<div class="mt-2" style="background-color: #f0f0f0;"> 
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card" style="height: 65rem;">
        <div class="card-body">
          <h2 class="card-title text-center mb-4"><strong>Edit Movie</strong></h2>
         <form {{on "submit" (fn this.handleEditMovie @model.id)}} class="mb-3 ms-4 ">
          
            <div class="mb-2">
              <label for="name">Name:</label>
              <Input type="text" id="name" @value={{@model.name}} class="form-control mb-3" placeholder="Name"/> 
            </div>
             <div class="mb-2">
              <label for="director">Director:</label>
              <Input type="text" id="director" @value={{@model.director}} class="form-control mb-3" placeholder="Director"/> 
            </div>
              <div class="mb-2">
              <label for="genre">Genre:</label>
              <Input type="text" id="genre" @value={{@model.genre}} class="form-control mb-3" placeholder="Genre"/> 
            </div>
            <div class="mb-2">
              <label for="Cast">Cast:</label>
              <Input type="text" id="genre" @value={{@model.cast}} class="form-control mb-3" placeholder="Cast"/> 
            </div>
            
            <div class="mb-2">
              <label for="Description">Description:</label>
              <Input type="text" id="genre" @value={{@model.description}} class="form-control mb-3" placeholder="Description"/> 
            </div>
            <div class="mb-2">
              <label for="Description">ReleaseDate:</label>
              <Input type="text" id="genre" @value={{@model.releaseDate}} class="form-control mb-3" placeholder="Description"/> 
            </div>
             <div class="mb-4">
            <label for="releasedDate">ChangeDate:</label>
              {{input type="date" id="releasedDate" value=@model.releaseDate}}
            </div>
            {{#if this.isAdmin }}
          <div class=" mt-3 ms-2">
            <img class="picture" src="data:image;base64,{{@model.photoPath}}"  alt="Movie Poster">
            {{input type="date" id="releasedDate" value=@model.photoPath}}
            </div>
            {{else}}
            <div class=" mt-3 ms-2">
            <p> Images Updated Successfully</p>
            </div>
              {{/if}}
              
            {{!-- <img  src="https://localhost:7077/{{@model.photoPath}}" class="picture" alt="Movie Poster"> --}}
            <div class="mb-4">
              <label for="image">Upload Image:</label>
               <input type="file" id="image" {{on "change" this.fileSelected}}>
            </div>
             <div class="d-grid gap-2 ">
            <button type="submit" class="btn btn-primary"><strong>Edit</strong></button>
            </div>
       
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


